{% extends "twig/layout.twig" %}

{% set current = 'house' %}

{% block page %}

    <div class="profile">

        <div class="container">

            <div class="row">
                <!-- IMAGE PROFILE -->
                <div class="col-xs-12 col-sm-4 col-md-4 col-lg-3">
                    {% include 'twig/edit_house/edit_house_menu.twig' with {
                        active: 'services'
                    } %}
                </div>

                <div class="col-xs-12 col-sm-8 col-md-8 col-lg-9">

                    {% include 'twig/profile/profile_header.twig' with {
                        title: 'Servicios'
                    } only %}

                    <div class="profile__section">

                        <!-- General -->
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-3">
                                <label class="label-form">General</label>
                            </div>
                            <div class="col-xs-12 col-sm-12 col-md-9">

                                <div class="row">

                                    <div class="col-sm-6">
                                        {% set content = [
                                            'Aire acondicionado',
                                            'Wifi',
                                            'Ordenador',
                                            'Cosas de bebé',
                                            'Portero',
                                            'Parking',
                                            'Televisión',
                                            'Accesible para discapacitados'
                                        ] %}

                                        {% for item in content %}
                                            {% include 'twig/content/component/checkbox.twig' with {
                                                item: item
                                            } only %}
                                        {% endfor %}
                                    </div>

                                    <div class="col-sm-6">
                                        {% set content = [
                                            'DVD',
                                            'Gimnasio',
                                            'Calefacción',
                                            'Piscina',
                                            'Terraza',
                                            'Jardín',
                                            'Jacuzzi',
                                            'Bañera Hidromasaje'
                                        ] %}

                                        {% for item in content %}
                                            {% include 'twig/content/component/checkbox.twig' with {
                                                item: item
                                            } only %}
                                        {% endfor %}
                                    </div>
                                </div>

                            </div>
                        </div> <!-- General -->
                        <div class="row row_extra">
                            <div class="col-xs-12 col-sm-12 col-md-3">
                                <label class="label-form">Limpieza</label>
                            </div>
                            <div class="col-xs-12 col-sm-12 col-md-9">

                                <div class="row">

                                    <div class="col-sm-6">
                                        {% set content = [
                                            'Lavadora',
                                            'Secadora',
                                            'Lavavajillas',
                                            'Aspiradora',
                                            'Servicio de limpieza'
                                        ] %}

                                        {% for item in content %}
                                            {% include 'twig/content/component/checkbox.twig' with {
                                                item: item
                                            } only %}
                                        {% endfor %}
                                    </div>

                                    <div class="col-sm-6">
                                        {% set content = [
                                            'Toallas',
                                            'Detergente',
                                            'Gel',
                                            'Champú',
                                            'Estropajos'
                                        ] %}

                                        {% for item in content %}
                                            {% include 'twig/content/component/checkbox.twig' with {
                                                item: item
                                            } only %}
                                        {% endfor %}
                                    </div>
                                </div>

                            </div>
                        </div> <!-- Cocina -->
                        <div class="row row_extra">
                            <div class="col-xs-12 col-sm-12 col-md-3">
                                <label class="label-form">Cocina</label>
                            </div>
                            <div class="col-xs-12 col-sm-12 col-md-9">

                                <div class="row">

                                    <div class="col-sm-6">
                                        {% set content = [
                                            'Microondas',
                                            'Horno',
                                            'Robot de cocina',
                                            'Vitrocerámica'
                                        ] %}

                                        {% for item in content %}
                                            {% include 'twig/content/component/checkbox.twig' with {
                                                item: item
                                            } only %}
                                        {% endfor %}
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>

                </div>
            </div>

        </div>
    </div>


{% endblock %}

<div class="booking__container">
    <div class="booking__header">
        <div class="booking__points">
            35 pts
        </div>

        <div class="booking__extra_info">
            Por noche
        </div>
    </div>

    <div class="booking__body">

        <div class="booking__inputs">
            <div class="booking__input">
                <label>Llegada</label>
                <input type="date" name="llegada" class="booking__input-arrival"/>
            </div>
            <div class="booking__input">
                <label>Salida</label>
                <input type="date" name="salida" class="booking__input-departure" />
            </div>
            <div class="booking__input">
                <label>Personas</label>
                <select name="personas" class="booking__input-people">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                </select>
            </div>
        </div>

        <div class="booking__row">
            <div class="titles">
                Service fee
                <span class="icon"></span>
            </div>
            <div class="content">
                $95
            </div>
        </div>

        <div class="booking__row">
            <div class="titles">
                Seguro
                <span class="icon"></span>
            </div>
            <div class="content">
                $10
            </div>
        </div>

        <div class="booking__row">
            <div class="titles">
                Limpieza
                <span class="icon"></span>
            </div>
            <div class="content">
                $74
            </div>
        </div>

        <div class="booking__row">
            <div class="titles">
                Total
                <span class="icon"></span>
            </div>
            <div class="content">
                $184
            </div>
        </div>


        <input type="submit" class="booking__submit" value="Solicitar reserva">

        <div class="booking__watching">
            <div class="booking__watching-title">
                Personas mirando este anuncio.
            </div>

            <div class="booking__watching-text">
                <span class="booking__watching-icon"></span>
                11 personas estan mirando estas fechas.
            </div>
        </div>

    </div>

</div>

{% include 'wishlist.twig' %}

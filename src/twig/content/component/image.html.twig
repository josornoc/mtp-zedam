
{% if common is defined and common == true %}

    <picture class="{{ (addclass is defined) ? addclass : '' }}">
        <!--[if IE 9]><video><![endif]-->
        <source data-srcset="images/mobile/{{ image }}" data-sizes="auto"/>

        <!--[if IE 9]></video><![endif]-->
        <img data-sizes="auto"

             alt='{{ alt }}'
             class="{{ class }} lazyload"
            {% if default is defined %}
                src="{{ default }}"
            {% else %}
                src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7"
            {% endif %}

            {% if width is defined %}
                width="{{ width }}"
            {% endif %}
            {% if height is defined %}
                height="{{ height }}"
            {% endif %}
            {% if data_position is defined %}
                data-position="{{ data_position }}"
            {% endif %}
            {% if data_class is defined %}
                data-class="{{ data_class }}"
            {% endif %}
            {% if data_duration is defined %}
                data-duration="{{ data_duration }}"
            {% endif %}
            {% if data_delay is defined %}
                data-delay="{{ data_delay }}"
            {% endif %}
            {% if data_iteration_count is defined %}
                data-iteration-count="{{ data_iteration_count }}"
            {% endif %}
            {% if data_viewport is defined %}
                data-viewport="{{ data_viewport }}"
            {% endif %}

            {% if data_position_mobile is defined %}
                data-position-mobile="{{ data_position_mobile }}"
            {% endif %}
            {% if data_class_mobile is defined %}
                data-class-mobile="{{ data_class_mobile }}"
            {% endif %}
            {% if data_duration_mobile is defined %}
                data-duration-mobile="{{ data_duration_mobile }}"
            {% endif %}
            {% if data_delay_mobile is defined %}
                data-delay-mobile="{{ data_delay_mobile }}"
            {% endif %}
            {% if data_iteration_count_mobile is defined %}
                data-iteration-count-mobile="{{ data_iteration_count_mobile }}"
            {% endif %}
            {% if data_viewport_mobile is defined %}
                data-viewport-mobile="{{ data_viewport_mobile }}"
            {% endif %}

        data-srcset="images/mobile/{{ image }}"
        />
    </picture>

{% else %}


    <picture>
        <!--[if IE 9]><video><![endif]-->
        <source
            data-srcset="images/mobile/{{ image }}" sizes="auto"
            media="(max-width: 768px)" />
        <source
            data-srcset="images/tablet/{{ image }}" sizes="auto"
            media="(max-width: 1220px)" />
        <source
            data-srcset="images/desktop/{{ image }}" sizes="auto"
            media="(max-width: 1420px)" />
        <source
            data-srcset="images/desktop_big/{{ image }}" sizes="auto"
            media="(max-width: 10000px)" />
        <source
            data-srcset="images/desktop_big/{{ image }}" sizes="auto" />
        <!--[if IE 9]></video><![endif]-->
        <img sizes="auto"
             alt="{{ alt }}"
             class="{{ class }} lazyload"
            {% if default is defined %}
                src="{{ default }}"
            {% else %}
                src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7"
            {% endif %}


            {% if width is defined %}
                width="{{ width }}"
            {% endif %}
            {% if height is defined %}
                height="{{ height }}"
            {% endif %}
            {% if data_position is defined %}
                data-position="{{ data_position }}"
            {% endif %}
            {% if data_class is defined %}
                data-class="{{ data_class }}"
            {% endif %}
            {% if data_duration is defined %}
                data-duration="{{ data_duration }}"
            {% endif %}
            {% if data_delay is defined %}
                data-delay="{{ data_delay }}"
            {% endif %}
            {% if data_iteration_count is defined %}
                data-iteration-count="{{ data_iteration_count }}"
            {% endif %}
            {% if data_viewport is defined %}
                data-viewport="{{ data_viewport }}"
            {% endif %}

            {% if data_position_mobile is defined %}
                data-position-mobile="{{ data_position_mobile }}"
            {% endif %}
            {% if data_class_mobile is defined %}
                data-class-mobile="{{ data_class_mobile }}"
            {% endif %}
            {% if data_duration_mobile is defined %}
                data-duration-mobile="{{ data_duration_mobile }}"
            {% endif %}
            {% if data_delay_mobile is defined %}
                data-delay-mobile="{{ data_delay_mobile }}"
            {% endif %}
            {% if data_iteration_count_mobile is defined %}
                data-iteration-count-mobile="{{ data_iteration_count_mobile }}"
            {% endif %}
            {% if data_viewport_mobile is defined %}
                data-viewport-mobile="{{ data_viewport_mobile }}"
            {% endif %}

        />
    </picture>

{% endif %}

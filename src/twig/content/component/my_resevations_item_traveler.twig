<div class="my-houses__container">

    <div class="my-houses__info">

        <div class="my-houses__traveler-image">
            <div class="background__container-animation lazyload" style="background-image: url('{{ item.image }}')"></div>

            <div class="house__related-points">
                {{ item.points }} <span>points</span>
            </div>

            <div class="house__host-image">
                <div class="house__host-image-container">
                    {% include 'image.html.twig' with {
                        alt: item.title,
                        common: true,
                        class: '',
                        image: item.image_profile
                    } only %}
                </div>
                <a href="" class="house__host-image-text">
                    Hable con ella
                </a>
            </div>
        </div>

        <div class="my-houses__second-column">

            <div class="my-house__info-title">
                {{ item.title }}
            </div>
            <div class="my-house__info-location clean">
                <span class="icon"></span>{{ item.location}}
            </div>
            <div class="my-house__info-date clean">
                <span class="icon"></span>
                Desde 15/05/2016 hasta 20/05/2016
            </div>
            <div class="my-house__info-contact">
                Tu anfitrión(a): Kati
            </div>
            <div class="my-house__info-contact-mail">
                katilizandra@yahoo.es<br>
                +34 000000000<br>
            </div>

        </div>

        <div class="my-houses__third-column">
            <div class="traveler__row">
                <div class="traveler__info">
                    <div class="label">Puntos/noche</div>
                    <div class="content">120 puntos</div>
                </div>
                <div class="traveler__info">
                    <div class="label">Noches</div>
                    <div class="content">3 noches</div>
                </div>
                <div class="traveler__info">
                    <div class="label">Total</div>
                    <div class="content">360 puntos</div>
                </div>
            </div>
            <div class="traveler__row">
                <div class="traveler__info">
                    <div class="label">Gastos de gestión</div>
                    <div class="content">29,90 €</div>
                </div>
                <div class="traveler__info">
                    <div class="label">Seguro Cancelación</div>
                    <div class="content">9,90 €</div>
                </div>
                <div class="traveler__info">
                    <div class="label">Total</div>
                    <div class="content">39,90 €</div>
                </div>
            </div>
        </div>

    </div>

</div>

